<h1>Studenci</h1>
dodano <%=@students.size %>
średnia <%=show_mark Mark.all %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthdate</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td>
        <%= student.name %>
        <%= student.marks.length %>
        </td>
        <td><%= student.birthdate %></td>
        <td><%= student.info %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= show_mark student.marks %></td>
        <td><%= %></td>
      </tr>
    <% end %>
  </tbody>
</table>

